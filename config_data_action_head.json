{
  "project_name": "layout-diffusion-action-head-8gpu",
  "run_name": "data-action-head-8gpu-training",
  "device": "cuda",
  "seed": 42,
  "use_multi_gpu": true,
  
  "data": {
    "use_trajectory_dataset": true,
    "data_root": "/home/data-action_head",
    "train_ratio": 0.8,
    "batch_size": 32,
    "num_workers": 32,
    "image_size": 224
  },
  
  "model": {
    "visual_backbone": "clip",
    "visual_dim": 768,
    "hidden_dim": 512,
    "num_layers": 12,
    "max_elements": 25
  },
  
  "diffusion": {
    "num_timesteps": 1000,
    "beta_start": 0.0001,
    "beta_end": 0.02,
    "schedule_type": "linear",
    "trajectory_steps": 50
  },
  
  "loss": {
    "noise_weight": 1.0,
    "position_weight": 1.0,
    "layer_weight": 0.5,
    "confidence_weight": 0.3,
    "aesthetic_weight": 0.2,
    "overlap_weight": 0.8,
    "alignment_weight": 0.4
  },
  
  "optimizer": {
    "lr": 4e-4,
    "weight_decay": 0.01,
    "betas": [0.9, 0.999],
    "min_lr": 1e-6,
    "freeze_visual": true
  },
  
  "training": {
    "num_epochs": 100,
    "save_every": 10,
    "max_grad_norm": 1.0,
    "save_dir": "./checkpoints"
  },
  
  "inference": {
    "num_steps": 50
  },
  
  "canvas_size": [1024, 1024],
  "max_elements": 25,
  
  "use_swanlab": false,
  "backbone_path": null
}
